{
  "name": "easy-bible",
  "version": "1.0.0",
  "description": "A simple Bible reading website built with Nextra",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "node scripts/sync-articles.test.js",
    "test:sync": "node scripts/test-sync.js",
    "branch:init": "powershell -ExecutionPolicy Bypass -File scripts/setup-branches.ps1 init",
    "branch:sync": "powershell -ExecutionPolicy Bypass -File scripts/setup-branches.ps1 sync",
    "branch:merge": "powershell -ExecutionPolicy Bypass -File scripts/setup-branches.ps1 merge",
    "branch:status": "powershell -ExecutionPolicy Bypass -File scripts/setup-branches.ps1 status"
  },
  "keywords": [
    "bible",
    "nextra",
    "nextjs",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "next": "^16.0.1",
    "nextra": "^4.6.0",
    "nextra-theme-docs": "^4.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "19.2.2"
  }
}
